<Page
    x:Class="Testverktyg.Client.Views.SplitViewMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Testverktyg.Client.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Transitions>
        <TransitionCollection>
            <EdgeUIThemeTransition Edge="Left"/>
        </TransitionCollection>
    </Page.Transitions>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="CollapseButton"
                        Width="130"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="20"
                        Content="&#xE700;"
                        
                        Click="CollapseButton_Click" 
                        />
                <TextBlock 
                           x:Name="TitleTextblock" 
                           Text="Välkommen"
                           Margin="20,0,0,0"
                           FontSize="16"
                           FontFamily="Cambria"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                <TextBlock
                            x:Name="LoggedInAsLastTextBlock"
                            Text="Inloggad som: "
                            Margin="10,0,0,0"
                            FontSize="16"
                            FontFamily="Cambria"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                <TextBlock
                            x:Name="LoginFirstTextBlock"
                            Text="{x:Bind _teacher.FirstName}"
                            Margin="3,0,0,0"
                            FontSize="16"
                            FontFamily="Cambria"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                <TextBlock
                            x:Name="LoginLastTextBlock"
                            Text="{x:Bind _teacher.LastName}"
                            Margin="3,0,0,0"
                            FontSize="16"
                            FontFamily="Cambria"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>


            </StackPanel>
        </RelativePanel>
        <SplitView
            x:Name="MenuSplit"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            DisplayMode="CompactInline"
            CompactPaneLength="56"
            OpenPaneLength="130"
            IsPaneOpen="True">

            <SplitView.Pane>
                <StackPanel>
                    <ListBox SelectionMode="Single"
                             x:Name="SplitViewMenuList"
                             SelectionChanged="SplitViewMenuList_SelectionChanged"            
                             >
                        <ListBoxItem
                            x:Name="HomeListBoxItem"
                            Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe UI Emoji"
                                       FontSize="24"
                                       Text="&#x1F3E1;"
                                       HorizontalAlignment="Left"/>
                                <TextBlock Text="Hem"
                                       FontFamily="Cambria"
                                       FontSize="13"
                                       Margin="20,0,0,0"
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem
                            x:Name="CreateQuestionListBoxitem"
                            Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe UI Emoji"
                                       FontSize="24"
                                       Text="&#x2754;"
                                       HorizontalAlignment="Left"
                                       Margin="3,0,0,0"/>
                                <TextBlock Text="Skapa&#x0a;fråga"    
                                       FontFamily="Cambria"
                                       FontSize="13"
                                       Margin="27,0,0,0"
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem
                            x:Name="CreateExamListBoxitem"
                            Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock 
                                       FontFamily="Segoe UI Emoji"
                                       FontSize="24"
                                       Text="&#x1F4C4;"
                                       HorizontalAlignment="Left"/>
                                <TextBlock 
                                       Text="Skapa&#x0a;prov"
                                       FontFamily="Cambria"
                                       FontSize="13"
                                       Margin="26,0,0,0"
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem
                            x:Name="CorrectExamListBoxitem"
                            Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe UI Emoji"
                                       FontSize="24"
                                       Text="&#x2714;"
                                       HorizontalAlignment="Left"/>
                                <TextBlock Text="Correct&#x0a;Exam"
                                       FontFamily="Cambria"
                                       FontSize="13"
                                       Margin="26,0,0,0"
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem
                            x:Name="ExitListBoxitem"
                            Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe UI Emoji"
                                       FontSize="24"
                                       Text="&#x1F6AA;"
                                       HorizontalAlignment="Left"/>
                                <TextBlock Text="Avsluta"
                                       FontFamily="Cambria"
                                       FontSize="13"
                                       Margin="26,0,0,0"
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </SplitView.Pane>

            <SplitView.Content>
                <Frame x:Name="PageFrame">

                </Frame>
            </SplitView.Content>

        </SplitView>



    </Grid>
</Page>
